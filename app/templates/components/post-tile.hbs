<div class="col-md-9">
<ul>
  {{#each model as |post|}}
    <li style="border: 1px #ccc solid;list-style-type:none;padding:15px;margin-bottom:5px;margin-right:25px;background:#FFF;box-shadow: 1px 1px 1px 1px #3896A3">
      {{#link-to 'post-view' post.id}}
      <h2 style="border-bottom:1px #ccc solid">{{post.title}}</h2>
      {{/link-to}}
      <p>Category: {{post.category}} Tags: {{post.tags}} <span style="float:right">Posted at: {{post.date}}</span></p>
      <img style="width:20%;height:150px;float:left;margin-right:25px" src="{{post.image}}">
      <p>{{post.contents}}</p>
      {{post-edit post=post update="update"}} <button style="display:inline-block" {{action 'delete' post}}>Delete</button>
    </li>
  {{/each}}
</ul>
<p style="text-align:center">(Showing last 3 posts)</p>
</div>
<div class="col-md-3">
<form class="navbar-form" role="search">
  <div class="input-group add-on">
    <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
    <div class="input-group-btn">
      <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
</form>
{{new-post newPost="newPost"}}
</div>
